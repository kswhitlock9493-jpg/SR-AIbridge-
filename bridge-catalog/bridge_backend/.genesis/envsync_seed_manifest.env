# ==========================================================================================
# This manifest serves as the single source of truth for environment variables that should
# be synchronized across all deployment platforms (Render backend + Netlify frontend).
# Genesis uses this manifest to detect drift and automatically propagate changes.
# ==========================================================================================

# === LINK ENGINES ===
# Controls whether Blueprint engines are linked and active
LINK_ENGINES=true

# === BLUEPRINT CONFIGURATION ===
# Enables the Blueprint engine system for schema management
BLUEPRINTS_ENABLED=true

# === DATABASE CONFIGURATION ===
# Enables database connectivity
DB_ENABLED=true

# Database async driver (asyncpg for PostgreSQL)
DB_ASYNC_DRIVER=asyncpg

# Connection pool configuration
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_MAX_OVERFLOW=20

# Database schema name
DB_SCHEMA=bridge_backend

# === HEALTH CHECK CONFIGURATION ===
# Enables health check endpoints
HEALTH_ENABLED=true

# Health probe interval in seconds
HEALTH_PROBE_INTERVAL=30

# Health check endpoint path
HEALTH_ENDPOINT=/health

# Expected HTTP status for healthy state
HEALTH_STATUS_OK=200

# === FEDERATION CONFIGURATION ===
# Enables multi-agent federation capabilities
FEDERATION_ENABLED=true

# Federation discovery interval in seconds
FEDERATION_DISCOVERY_INTERVAL=60

# Federation sync interval in seconds
FEDERATION_SYNC_INTERVAL=300

# === WATCHDOG CONFIGURATION ===
# Enables autonomous watchdog monitoring
WATCHDOG_ENABLED=true

# Watchdog check interval in seconds
WATCHDOG_INTERVAL=10

# === PREDICTIVE STABILIZER ===
# Enables predictive stability engine
PREDICTIVE_STABILIZER_ENABLED=true

# === RUNTIME CONFIGURATION ===
# Server host binding
HOST=0.0.0.0

# === GENESIS PERSISTENCE ===
# Enables Genesis event persistence layer
GENESIS_PERSISTENCE_ENABLED=true

# Path to Genesis event database
GENESIS_DATABASE_PATH=bridge_backend/.genesis/events.db

# Maximum depth for Genesis echo introspection
GENESIS_ECHO_DEPTH_LIMIT=10

# ==========================================================================================
# End of EnvSync Seed Manifest
# ==========================================================================================
