```bash
# 1. Compile master scroll
cat threads/*.md > AIbridge_Sovereign_Playbook_v3.0.md

# 2. Generate coronation PDF
pandoc AIbridge_Sovereign_Playbook_v3.0.md -o AIbridge_Sovereign_Playbook_v3.0.pdf \
  --toc --number-sections \
  -V geometry:margin=2cm \
  -V title-meta:"AIbridge Sovereign Playbook v3.0" \
  -V author-meta:"Fleet Admiral Kyle S. Whitlock"

# 3. Bundle everything
zip -r AIbridge_Pantheon_v3.0.zip \
  AIbridge_Sovereign_Playbook_v3.0.md \
  AIbridge_Sovereign_Playbook_v3.0.pdf \
  src/ rituals/ tests/ DOCTRINE/ DEPLOYMENT/ tools/ requirements.txt

# 4. Sign & seal
python src/export_and_sign.py \
  --files AIbridge_Pantheon_v3.0.zip \
  --out AIbridge_Pantheon_v3.0.zip.signed

# 5. Log the coronation
echo "{\"ts\":\"$(date -u +%Y-%m-%dT%H:%M:%SZ)\",\"action\":\"pantheon_sealed_v3\",\"hash\":\"$(sha256sum AIbridge_Pantheon_v3.0.zip | cut -d' ' -f1)\",\"count\":400}" >> vault/custody.log
```

