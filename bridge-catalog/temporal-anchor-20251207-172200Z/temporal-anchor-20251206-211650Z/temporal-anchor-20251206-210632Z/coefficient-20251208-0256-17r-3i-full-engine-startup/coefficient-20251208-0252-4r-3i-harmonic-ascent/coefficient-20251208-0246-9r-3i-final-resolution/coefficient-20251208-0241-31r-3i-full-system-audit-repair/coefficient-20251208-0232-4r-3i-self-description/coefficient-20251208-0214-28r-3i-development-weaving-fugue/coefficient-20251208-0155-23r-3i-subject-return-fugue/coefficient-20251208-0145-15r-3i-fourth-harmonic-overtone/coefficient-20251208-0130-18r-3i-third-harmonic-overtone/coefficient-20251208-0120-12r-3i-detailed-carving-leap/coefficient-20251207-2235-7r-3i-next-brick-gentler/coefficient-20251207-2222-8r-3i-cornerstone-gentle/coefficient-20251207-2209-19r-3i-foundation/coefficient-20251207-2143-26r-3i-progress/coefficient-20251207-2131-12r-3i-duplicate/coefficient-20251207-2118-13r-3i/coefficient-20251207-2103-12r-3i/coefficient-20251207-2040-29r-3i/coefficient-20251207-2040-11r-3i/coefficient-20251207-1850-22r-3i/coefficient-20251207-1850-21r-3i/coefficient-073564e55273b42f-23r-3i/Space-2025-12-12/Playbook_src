#define STIM_AMP 40  // ¬µA
#define STIM_DUR 2   // ms

void trough_stim(void){
    if (theta_phase < -2.8f){ // ~-œÄ
        biphasic_pulse(STIM_AMP, STIM_DUR);
        phase_reset(); // avoid double fire
    }
}
