  --files AIbridge_Pantheon_v3.3.zip \
  --out AIbridge_Pantheon_v3.3.zip.signed

# 5. Log the coronation
echo "{\"ts\":\"$(date -u +%Y-%m-%dT%H:%M:%SZ)\",\"action\":\"pantheon_sealed_v3.3\",\"hash\":\"$(sha256sum AIbridge_Pantheon_v3.3.zip | cut -d' ' -f1)\",\"count\":475}" >> vault/custody.log
```

