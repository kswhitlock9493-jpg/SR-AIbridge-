# v1.9.7f Cascade Synchrony - Environment Configuration Example
# Copy this to .env and customize for your deployment

# ============================================
# FORGE SYSTEM - v1.9.7f Cascade Synchrony
# ============================================

# Enable GitHub Forge introspection and engine integration
FORGE_MODE=enabled

# Enable automatic self-healing at the Forge level
FORGE_SELF_HEAL=true

# Enable Cascade Synchrony cross-system healing protocol
CASCADE_SYNC=true

# Enable ARIE propagation through the Forge
ARIE_PROPAGATION=true

# Enable Umbra memory synchronization for learning from healing events
UMBRA_MEMORY_SYNC=true

# Truth certification for all operations (recommended: keep enabled)
TRUTH_CERTIFICATION=true

# ============================================
# CORE ENGINES (Required for Cascade Synchrony)
# ============================================

# Cascade - Root healing & event propagation engine
CASCADE_ENABLED=true

# ARIE - Adaptive repair intelligence environment
ARIE_ENABLED=true

# Umbra - Cognitive synthesis & deploy memory
UMBRA_ENABLED=true

# Truth - Certification and RBAC engine
TRUTH_ENABLED=true

# Genesis - Core orchestration framework
GENESIS_MODE=enabled

# ============================================
# EXISTING ENGINE FLAGS
# ============================================

# Keep your existing engine flags
ENGINES_ENABLE_TRUE=true
HXO_NEXUS_ENABLED=true
AUTONOMY_ENABLED=true
ENVRECON_ENABLED=true
ENVSCRIBE_ENABLED=true
STEWARD_ENABLED=true
BLUEPRINTS_ENABLED=true

# ============================================
# PLATFORM CONFIGURATION
# ============================================

# Your platform-specific settings remain unchanged
# PORT=8000
# DATABASE_URL=your_database_url
# ALLOWED_ORIGINS=https://your-domain.netlify.app,https://your-domain.onrender.com
