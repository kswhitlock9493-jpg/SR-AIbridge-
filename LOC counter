#!/bin/bash
# SR-AIbridge LOC Counter - Quick Reference
# 
# For a comprehensive LOC report with detailed breakdowns, run:
#   python3 count_loc.py
#
# This will generate:
# 1. Console output with full statistics
# 2. LOC_REPORT.md - Detailed markdown report
#
# Quick counts:
echo "=== Quick LOC Summary ==="
echo "For full report, run: python3 count_loc.py"
echo ""
{ 
  echo "PY  : $(find . -type f -name '*.py' ! -path '*/node_modules/*' ! -path '*/__pycache__/*' ! -path '*/.git/*' -print0 | xargs -0 cat 2>/dev/null | wc -l)"; 
  echo "JSX : $(find . -type f \( -name '*.jsx' -o -name '*.js' -o -name '*.tsx' -o -name '*.ts' \) ! -path '*/node_modules/*' ! -path '*/.git/*' -print0 | xargs -0 cat 2>/dev/null | wc -l)";
  echo "SH  : $(find . -type f -name '*.sh' ! -path '*/.git/*' -print0 | xargs -0 cat 2>/dev/null | wc -l)";
  echo "YML : $(find . -type f \( -name '*.yml' -o -name '*.yaml' \) ! -path '*/.git/*' -print0 | xargs -0 cat 2>/dev/null | wc -l)";
  echo "MD  : $(find . -type f -name '*.md' ! -path '*/.git/*' ! -path '*/node_modules/*' -print0 | xargs -0 cat 2>/dev/null | wc -l)";
  echo "SQL : $(find . -type f -name '*.sql' ! -path '*/.git/*' -print0 | xargs -0 cat 2>/dev/null | wc -l)";
} | sed 's/^/  /'
