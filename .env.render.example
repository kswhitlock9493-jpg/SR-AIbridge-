# ==========================
# RENDER BACKEND ENVIRONMENT (TEMPLATE)
# ==========================
# Copy this file to .env.render (for local testing) or set these variables
# in the Render Dashboard for production deployment.
# DO NOT commit .env.render with actual secrets!

# Core Database Connection (PostgreSQL on Render)
# Replace <YOUR_PASSWORD> with the actual password from Render Dashboard
DATABASE_URL=postgresql://sr_admin:<YOUR_PASSWORD>@dpg-d3i3jc0dl3ps73csp9e0-a.oregon-postgres.render.com/sr_aibridge_main
DATABASE_TYPE=postgres

# Backend API Configuration
# This should match your Render service URL
BRIDGE_API_URL=https://sr-aibridge.onrender.com
PORT=8000
ENVIRONMENT=production

# Security & Authentication
# Generate strong random keys (32+ characters) for production
# You can use: openssl rand -base64 32
SECRET_KEY=<YOUR_GENERATED_SECRET_KEY>
FEDERATION_SYNC_KEY=<YOUR_GENERATED_SECRET>

# Bridge Services
# Update these if using different frontend URLs
VAULT_URL=https://bridge.netlify.app/api/vault
CASCADE_MODE=production

# Logging Configuration
# Options: debug, info, warn, error
LOG_LEVEL=info

# Optional Monitoring
# Leave empty if not using Datadog
DATADOG_API_KEY=
DATADOG_REGION=us

# CORS Configuration
CORS_ALLOW_ALL=false
ALLOWED_ORIGINS=https://bridge.netlify.app,https://sr-aibridge.netlify.app

# Render Service Configuration (Optional)
# These are used by automation scripts
RENDER_API_KEY=<YOUR_RENDER_API_KEY>
RENDER_SERVICE_ID=<YOUR_RENDER_SERVICE_ID>

# Diagnostics
AUTO_DIAGNOSE=true
DIAGNOSE_WEBHOOK_URL=

# Debug Mode (disable in production)
DEBUG=false
